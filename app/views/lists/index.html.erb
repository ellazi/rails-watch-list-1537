<div class="banner-homepage">
  <h1>All my lists</h1>
  <%= link_to "Create a new list", new_list_path, class: "btn-success btn" %>
</div>
<div class="container">
  <div class="card-flex-container">
    <% @lists.each do |list| %>
    <div class="list-card">
      <h5><%= link_to list.name, list_path(list) %></h5>
    </div>
    <% end %>
  </div>
</div>
