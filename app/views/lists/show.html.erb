<div class="container">
  <div class="navbar-list">
    <%= link_to "+ bookmark", new_list_bookmark_path(@list) %>
  </div>
  <h1><%= @list.name %></h1>
  <div class="card-flex-container">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="bookmark-card">
      <p style="height: 100px;"><%= bookmark.comment %></p>
      <h5><%= bookmark.movie.title %></h5>
      <p><%= bookmark.movie.overview %></p>
      <h6><%= bookmark.movie.rating %></h6>
      <p><%= bookmark.movie.poster_url %></p>
      <a href="<%= list_bookmark_path(@list, bookmark) %>" data-turbo-method="delete" data-turbo-confirm="Are you sure?">
        <i class="fa-solid fa-trash-can"></i>
      </a>
    </div>
    <% end %>
  </div>
</div>
